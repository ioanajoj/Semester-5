<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="en.ubb.examapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="en.ubb.examapp.ExamApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name="en.ubb.examapp.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="en.ubb.examapp.EntityDetailActivity"/>
        <activity android:name="en.ubb.examapp.NewEntityActivity"/>
        <activity android:name="en.ubb.examapp.EntityListActivity"/>
        <activity android:name=".WaiterOrdersListActivity"/>
        <activity android:name=".NewOrderActivity"/>
        <activity android:name=".OrderDetailActivity"/>
        <activity android:name=".KitchenOrdersListActivity"/>
        <activity android:name=".UpdateOrderActivity"/>
        <activity android:name=".ClientActivity"/>
    </application>

</manifest>